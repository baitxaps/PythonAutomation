{
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--ignore=E262,E265,E266,E303",
        "--max-line-length=248"
    ],
    // provider for formatiing.
    "python.formatting.provider": "yapf",
    "files.associations": {
        "iostream": "cpp"
    },
    "python.pythonPath": "/usr/local/bin/python"
}